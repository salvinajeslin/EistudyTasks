import java.io.File;
import java.util.logging.*;

private static void setupLogger() {
    try {
        // Ensure logs directory exists
        File logDir = new File("logs");
        if (!logDir.exists()) {
            if (logDir.mkdir()) {
                System.out.println("Logs directory created.");
            } else {
                System.err.println("Failed to create logs directory.");
            }
        }

        // Create log file handler
        Handler fileHandler = new FileHandler("logs/application.log", true);
        fileHandler.setFormatter(new SimpleFormatter());

        Logger rootLogger = Logger.getLogger("");
        rootLogger.addHandler(fileHandler);

    } catch (Exception e) {
        System.err.println("Logging setup failed: " + e.getMessage());
        e.printStackTrace();
    }
}
